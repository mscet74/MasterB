@page
@model ResetPasswordConfirmationModel
@{
	ViewData["Title"] = "Palavra-passe alterada";
}

<div class="container mt-6">
	<div class="row">

		<div class="d-flex justify-content-center text-uppercase">
			<h2>@ViewData["Title"]</h2>
		</div>
	</div>
	<div class="row justify-content-center mt-3">
		<div class="col-md-4">
			<p class="text-center">
				A palavra-passe foi redefinida.
			</p>
			<p class="text-center">
				Por favor, <a asp-page="./Login">clique aqui para iniciar sessão</a>.
			</p>
		</div>
	</div>
</div>